{
  "name": "javascript_interpreter",
  "version": "0.0.1",
  "description": "A MODL interpreter in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "dependencies": {
    "antlr4": "^4.7.2",
    "fp-ts": "^2.8.2",
    "fs": "0.0.1-security",
    "ts-loader": "^7.0.5",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@tsconfig/node10": "^1.0.7",
    "@types/antlr4": "^4.7.2",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.13",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "npm run build && mocha --require ts-node/register 'test/**/*.ts'",
